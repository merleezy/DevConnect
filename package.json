{
  "name": "devconnect",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w client\" \"npm run dev -w server\"",
    "lint": "npm run lint --workspaces",
    "lint:client": "npm run lint -w client",
    "lint:server": "npm run lint -w server"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}